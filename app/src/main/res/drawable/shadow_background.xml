<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">

    <!-- Drop Shadow Stack -->

    <!-- Layer - 4 -->
    <item>
        <shape>
            <padding
                android:bottom="@dimen/_1sdp"
                android:left="@dimen/_1sdp"
                android:right="@dimen/_1sdp"
                android:top="@dimen/_1sdp" />
            <corners android:radius="@dimen/_7sdp" />
            <solid android:color="#0FAAAAAA" />
        </shape>
    </item>

    <!-- Layer - 3 -->
    <item>
        <shape>
            <padding
                android:bottom="@dimen/_1sdp"
                android:left="@dimen/_1sdp"
                android:right="@dimen/_1sdp"
                android:top="@dimen/_1sdp" />
            <corners android:radius="@dimen/_7sdp" />

            <solid android:color="#14AAAAAA" />

        </shape>
    </item>


    <!-- Layer - 2 -->
    <item>
        <shape>
            <padding
                android:bottom="@dimen/_1sdp"
                android:left="@dimen/_1sdp"
                android:right="@dimen/_1sdp"
                android:top="@dimen/_1sdp" />
            <corners android:radius="@dimen/_7sdp" />

            <solid android:color="#1AAAAAAA" />

        </shape>
    </item>

    <!-- Layer - 1 -->
    <item>
        <shape>
            <padding
                android:bottom="@dimen/_1sdp"
                android:left="@dimen/_1sdp"
                android:right="@dimen/_1sdp"
                android:top="@dimen/_1sdp" />
            <corners android:radius="@dimen/_7sdp" />

            <solid android:color="#1FAAAAAA" />

        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape>
            <corners android:radius="@dimen/_7sdp" />
            <solid android:color="@color/white" />
        </shape>
    </item>

</layer-list>
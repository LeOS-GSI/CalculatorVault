<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_translucent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/_7sdp"
    android:paddingRight="@dimen/_7sdp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/linear_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/linear_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/linear_msg"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_40sdp"
                android:background="@drawable/shape_white"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_msg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_55sdp"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_14sdp"
                        android:paddingRight="@dimen/_14sdp"
                        android:text="@string/dialog_permission"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_14sdp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:layout_marginBottom="@dimen/_18sdp"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_3sdp"
                            android:layout_weight="1" />


                        <LinearLayout
                            android:id="@+id/linear_yes"
                            android:layout_width="@dimen/_140sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/cardbg_color_primary"
                            android:gravity="center"
                            android:visibility="visible">


                            <TextView
                                android:id="@+id/tv_yes"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:paddingBottom="@dimen/_2sdp"
                                android:text="@string/grant"
                                android:textAllCaps="true"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12sdp" />


                        </LinearLayout>


                        <View
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_3sdp"
                            android:layout_weight="1" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="@dimen/_85sdp"
            android:layout_height="@dimen/_85sdp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_color_primary_circle">

            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_launcher_round" />

        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>



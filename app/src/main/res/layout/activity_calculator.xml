<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calculator_holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.1">

        <TextView
            android:id="@+id/tv_formula"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppins_regular"

            android:gravity="start|bottom"
            android:maxLines="1"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingRight="@dimen/_5sdp"
            android:textColor="@color/navy_blue"
            android:textSize="@dimen/formula_text_size"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_passwordType"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center|bottom"
            android:maxLines="1"
            android:paddingRight="@dimen/_5sdp"
            android:text="@string/newPass"
            android:textColor="@color/navy_blue"
            android:textSize="@dimen/formula_text_size"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.8"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center_vertical|start"
        android:maxLines="1"
        android:padding="8dp"
        android:paddingRight="@dimen/_5sdp"
        android:textColor="@color/grey"
        android:textSize="@dimen/display_text_size"
        tools:text="0" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="24dp"
        android:background="#ECECEC" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_clearAll"
                style="@style/JButtons"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:background="@drawable/j_calc_btn_2"
                android:text="C"
                tools:ignore="NestedWeights" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.3dp" />
        </LinearLayout>


        <View
            android:layout_width="1.3dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_sign"
                style="@style/MyButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:background="@drawable/j_calc_btn_2"
                android:text="\+/-" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.3dp" />
        </LinearLayout>


        <View
            android:layout_width="1.3dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_percent"
                style="@style/MyButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:background="@drawable/j_calc_btn_2"
                android:text="%" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.3dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_divide"
                style="@style/JButtons"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:background="@drawable/j_calc_btn"
                android:text="รท"
                android:textColor="@color/white"
                android:textSize="32sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.3dp" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_7"
                style="@style/MyButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:background="@drawable/j_calc_btn_2"
                android:text="7" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.3dp" />
        </LinearLayout>


        <View
            android:layout_width="1.3dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_8"
                style="@style/MyButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:background="@drawable/j_calc_btn_2"
                android:text="8" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.3dp" />
        </LinearLayout>


        <View
            android:layout_width="1.3dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_9"
                style="@style/MyButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:background="@drawable/j_calc_btn_2"
                android:text="9" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.3dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_multiply"
                style="@style/JButtons"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:background="@drawable/j_calc_btn"
                android:text="x"
                android:textColor="@color/white"
                android:textSize="32sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.3dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_4"
                style="@style/MyButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:background="@drawable/j_calc_btn_2"
                android:text="4" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.3dp" />
        </LinearLayout>

        <View
            android:layout_width="1.3dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_5"
                style="@style/MyButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:background="@drawable/j_calc_btn_2"
                android:text="5" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.3dp" />
        </LinearLayout>


        <View
            android:layout_width="1.3dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_6"
                style="@style/MyButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:background="@drawable/j_calc_btn_2"
                android:text="6" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.3dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_minus"
                style="@style/JButtons"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:background="@drawable/j_calc_btn"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="32sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.3dp" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_1"
                style="@style/MyButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:background="@drawable/j_calc_btn_2"
                android:text="1" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.3dp" />
        </LinearLayout>


        <View
            android:layout_width="1.3dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_2"
                style="@style/MyButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:background="@drawable/j_calc_btn_2"
                android:text="2" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.3dp" />
        </LinearLayout>


        <View
            android:layout_width="1.3dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_3"
                style="@style/MyButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:background="@drawable/j_calc_btn_2"
                android:text="3" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.3dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_plus"
                style="@style/JButtons"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:background="@drawable/j_calc_btn"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="32sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.3dp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <Button
                android:id="@+id/btn_0"
                style="@style/MyButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/j_calc_btn_long"
                android:text="0" />

            <View
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="0.0" />

            <Button
                android:id="@+id/btn_decimal"
                style="@style/MyButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:background="@drawable/j_calc_btn_2"
                android:text="." />

        </LinearLayout>

        <Button
            android:id="@+id/btn_equals"
            style="@style/JButtons"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:background="@drawable/j_ellipse"
            android:text="="
            android:textColor="@color/white"
            android:textSize="44sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>

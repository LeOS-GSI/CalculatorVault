<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calculator_holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <TextView
        android:id="@+id/formula"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.1"
        android:background="@color/black"
        android:fontFamily="sans-serif-light"
        android:gravity="right|bottom"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="@dimen/formula_text_size" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.8"
        android:background="@color/black"
        android:fontFamily="sans-serif-light"
        android:gravity="center_vertical|right"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="@dimen/display_text_size"
        tools:text="0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_clearAll"
                style="@style/MyButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="AC" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.3dp"
                android:background="@color/lightgray" />
        </LinearLayout>


        <View
            android:layout_width="1.3dp"
            android:layout_height="match_parent"
            android:background="@color/lightgray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_sign"
                style="@style/MyButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="\+/-" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.3dp"
                android:background="@color/lightgray" />
        </LinearLayout>


        <View
            android:layout_width="1.3dp"
            android:layout_height="match_parent"
            android:background="@color/lightgray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_percent"
                style="@style/MyButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="%" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.3dp"
                android:background="@color/lightgray" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_divide"
                style="@style/MyButtonblue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="รท" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.3dp"
                android:background="@color/darkgray" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_7"
                style="@style/MyButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.3dp"
                android:background="@color/lightgray" />
        </LinearLayout>


        <View
            android:layout_width="1.3dp"
            android:layout_height="match_parent"
            android:background="@color/lightgray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_8"
                style="@style/MyButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.3dp"
                android:background="@color/lightgray" />
        </LinearLayout>


        <View
            android:layout_width="1.3dp"
            android:layout_height="match_parent"
            android:background="@color/lightgray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_9"
                style="@style/MyButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.3dp"
                android:background="@color/lightgray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_multiply"
                style="@style/MyButtonblue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="x" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.3dp"
                android:background="@color/darkgray" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_4"
                style="@style/MyButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.3dp"
                android:background="@color/lightgray" />
        </LinearLayout>

        <View
            android:layout_width="1.3dp"
            android:layout_height="match_parent"
            android:background="@color/lightgray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_5"
                style="@style/MyButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.3dp"
                android:background="@color/lightgray" />
        </LinearLayout>


        <View
            android:layout_width="1.3dp"
            android:layout_height="match_parent"
            android:background="@color/lightgray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_6"
                style="@style/MyButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.3dp"
                android:background="@color/lightgray" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_minus"
                style="@style/MyButtonblue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="-" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.3dp"
                android:background="@color/darkgray" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_1"
                style="@style/MyButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.3dp"
                android:background="@color/lightgray" />
        </LinearLayout>


        <View
            android:layout_width="1.3dp"
            android:layout_height="match_parent"
            android:background="@color/lightgray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_2"
                style="@style/MyButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.3dp"
                android:background="@color/lightgray" />
        </LinearLayout>


        <View
            android:layout_width="1.3dp"
            android:layout_height="match_parent"
            android:background="@color/lightgray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_3"
                style="@style/MyButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.3dp"
                android:background="@color/lightgray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_plus"
                style="@style/MyButtonblue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.3dp"
                android:background="@color/darkgray" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.329">

            <Button
                android:id="@+id/btn_0"
                style="@style/MyButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:text="0" />

            <View
                android:layout_width="1.3dp"
                android:layout_height="match_parent"
                android:background="@color/lightgray" />

            <Button
                android:id="@+id/btn_decimal"
                style="@style/MyButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="." />

        </LinearLayout>

        <Button
            android:id="@+id/btn_equals"
            style="@style/MyButtonblue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="=" />
    </LinearLayout>
</LinearLayout>
